const currentPath = Astro.url.pathname;

function isActive(path: string): boolean {
  if (path === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(path);
}

---

<script>
  const btnMenu = document.getElementById("btnMenu");
  const hamburgerIcon = document.getElementById("hamburgerIcon");
  const closeIcon = document.getElementById("closeIcon");
  const homeLink = document.getElementById("homeLink");
  const aboutLink = document.getElementById("aboutLink");
  const blogLink = document.getElementById("blogLink");

  let toggle = false;
  
  if (btnMenu && hamburgerIcon && closeIcon) {
    btnMenu.addEventListener("click", () => {
      toggle = !toggle;
      if (toggle) {
        hamburgerIcon.classList.add("hidden");
        closeIcon.classList.remove("hidden");
        document.getElementById("overlay")?.classList.remove("hidden");
      } else {
        hamburgerIcon.classList.remove("hidden");
        closeIcon.classList.add("hidden");
        document.getElementById("overlay")?.classList.add("hidden");
      }
    });
    
    if (homeLink) {
      homeLink.addEventListener("click", () => {
        toggle = false;
      });
    }
    
    if (aboutLink) {
      aboutLink.addEventListener("click", () => {
        toggle = false;
      });
    }
    
    if (blogLink) {
      blogLink.addEventListener("click", () => {
        toggle = false;
      });
    }
  }
</script>

<style>
  nav {
    padding: 1rem;
    top: 0;
    right:0;
    transform: translateX(80%); 
    z-index: 1000;
  }

  nav ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row; /* Asegura que los elementos de la lista estén en fila */
    justify-content: flex-end; /* Alinea los elementos de la lista a la derecha */
  }

  nav li {
    margin-right: 20px;
  }

  nav a {
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    padding-bottom: 4px;
  }

  nav a:hover {
    color: #ccc;
  }

  nav a.active {
    color: #ec4899;
    font-weight: 600;
  }

  nav a.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, #a855f7, #ec4899);
    border-radius: 2px;
  }

  /* Media query para pantallas pequeñas */
  @media (max-width: 768px) {
    nav ul {
      flex-direction: column; /* Cambia la dirección de los elementos de la lista a columna */
      align-items: flex-end; /* Alinea los elementos de la lista al final (derecha) */
    }

    nav {
      padding: 0.5rem; /* Reduce el padding en pantallas pequeñas */
      transform: translateX(0); /* Asegura que el menú esté completamente visible */
    }

    nav li {
      margin-right: 0; /* Elimina el margen derecho en los elementos de la lista */
      margin-bottom: 10px; /* Añade un margen inferior para separar los elementos */
    }
  }
</style>

<div>
  <section>
    <nav class="hidden md:block">
      <ul>
        <li><a href="/" class={`text-slate-900 dark:text-white ${isActive('/') ? 'active' : ''}`}>Home</a></li>
        <li><a href="/about/" class={`text-slate-900 dark:text-white ${isActive('/about') ? 'active' : ''}`}>About</a></li>
        <li><a href="/blog/" class={`text-slate-900 dark:text-white ${isActive('/blog') ? 'active' : ''}`}>Blog</a></li>
      </ul>
    </nav>

    <div id="btnMenu" class="block md:hidden cursor-pointer">
      <div id="hamburgerIcon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-text-align-justify-icon lucide-text-align-justify"><path d="M3 5h18"/><path d="M3 12h18"/><path d="M3 19h18"/></svg></div>
      <div id="closeIcon" class="hidden">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x-icon lucide-x"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
      </div>
          
    </div>
  </section>
  <section class="hidden absolute inset-0 z-50 h-screen w-[calc(100%-18rem)] bg-slate-100 dark:bg-slate-900" id="overlay">
    <nav class="bg-slate-100 dark:bg-slate-900">
      <ul>
        <li><a href="/" class={`text-slate-900 dark:text-white ${isActive('/') ? 'active' : ''}`} id="homeLink">Home</a></li>
        <li><a href="/about/" class={`text-slate-900 dark:text-white ${isActive('/about') ? 'active' : ''}`} id="aboutLink">About</a></li>
        <li><a href="/blog/" class={`text-slate-900 dark:text-white ${isActive('/blog') ? 'active' : ''}`} id="blogLink">Blog</a></li>
      </ul>
    </nav>
  </section>
</div>





